<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
	<definition name="layout-tiles" template="/WEB-INF/tiles/layout/default-layout.jsp">
		<put-attribute name="header" value="/WEB-INF/tiles/layout/layout-header.jsp" />
		<put-attribute name="content" value="" />
	</definition>
	<definition name="layout-mobile-tiles" template="/WEB-INF/tiles/layout/default-mobile-layout.jsp">
		<put-attribute name="header" value="/WEB-INF/tiles/layout/layout-mobile-header.jsp" />
		<put-attribute name="content" value="" />
	</definition>
	<definition name="class-layout-tiles" template="/WEB-INF/tiles/layout/default-class-layout.jsp">
		<put-attribute name="content" value="" />
	</definition>
	<definition name="*/*" extends="layout-tiles">
		<put-attribute name="content" value="/WEB-INF/jsp/{1}/{2}.jsp" />
	</definition>
	<definition name="test/class/*" extends="class-layout-tiles">
		<put-attribute name="content" value="/WEB-INF/jsp/test/class/{1}.jsp" />
	</definition>
	<definition name="mobile/*/*" extends="layout-tiles">
		<put-attribute name="content" value="/WEB-INF/jsp/mobile/{1}/{2}.jsp" />
	</definition>
</tiles-definitions>
